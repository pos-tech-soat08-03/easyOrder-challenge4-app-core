              "type": "string"
            },
            "description": "Status do pedido",
            "example": "RASCUNHO",
            "enum": [
              "EM_ABERTO",
              "AGUARDANDO_PAGAMENTO",
              "RECEBIDO",
              "EM_PREPARACAO",
              "PRONTO",
              "FINALIZADO",
              "CANCELADO"
            ]
          },
          {
            "name": "page",
            "in": "query",
            "description": "Página",
            "required": false,
            "example": 1,
            "default": 1,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limite de registros por página",
            "required": false,
            "example": 10,
            "default": 10,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "orderField",
            "in": "query",
            "description": "Campo de ordenação",
            "required": false,
            "example": "DATA_CADASTRO",
            "default": "DATA_CADASTRO",
            "enum": [
              "DATA_CADASTRO"
            ],
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "orderDirection",
            "in": "query",
            "description": "Direção da ordenação",
            "required": false,
            "example": "DESC",
            "default": "DESC",
            "enum": [
              "ASC",
              "DESC"
            ],
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pedidos listados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "mensagem": {
                      "type": "string",
                      "example": "Pedidos listados com sucesso"
                    },
                    "pedidos": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Pedido"
                      }
                    }
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "properties": {
                    "mensagem": {
                      "type": "string",
                      "example": "Pedidos listados com sucesso"
                    },
                    "pedidos": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Pedido"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitação Inválida"
          },
          "404": {
            "description": "Nenhum pedido encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "mensagem": {
                      "type": "string",
                      "example": "Nenhum pedido encontrado"
                    },
                    "pedidos": {
                      "type": "array",
                      "items": {}
                    }
