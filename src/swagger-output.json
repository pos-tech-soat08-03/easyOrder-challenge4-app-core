    "/pedido/listar/{statusPedido}": {
      "get": {
        "tags": [
          "Pedidos"
        ],
        "summary": "Listar Pedidos por status",
        "description": "Lista pedidos por status<br><br>  [ Endpoint para integração aos sistemas administrativo e/ou de loja ]",
