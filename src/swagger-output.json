          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "string",
              "properties": {
                "cliente_identificado": {
                  "type": "boolean",
                  "example": "true"
                },
                "clienteId": {
                  "type": "string",
                  "minLength": 36,
                  "maxLength": 36,
                  "format": "uuid",
                  "example": "29a81eeb-d16d-4d6c-a86c-e13597667307"
